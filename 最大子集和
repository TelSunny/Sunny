/*头文件内容class Max {
public:
	int MaxSum(int n, int num[]);
};*/
#include<stdio.h>
#include"test.h"
#include<iostream>
#include<algorithm>
using namespace std;
int Max::MaxSum(int n, int num[]){
	int max = num[0],store[100];
	store[0] = num[0];
	for (int i = 1; i < n; i++) {
		max += num[i];
		if (max <= num[i]) {
			max = num[i];
		}
		store[i] = max;
	}
	sort(store, store + n);
	cout << store[n - 1];
	return store[n-1];
}
int main() {
	int num[10], n; //n为数组元素总数
	cout << "请输入数组长度:" << endl;
	cin >> n;
	cout << "请输入数组的值:" << endl;
	for (int i = 0; i < n; i++)
		cin >> num[i];
	return 0;

}
